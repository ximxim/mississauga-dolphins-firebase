{
    "database": {
        "rules": "database.rules.json"
    },
    "hosting": [{
        "target": "staging",
        "public": "build",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }, {
      "public": "production",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
          {
              "source": "**",
              "destination": "/index.html"
          }
      ]
      }]
}
